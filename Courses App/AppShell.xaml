<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Courses_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Courses_App.Pages"
    FlyoutBackground="White"
    FlyoutIcon="flyout_black_icon.jpg"
    Shell.FlyoutBehavior="Flyout"
    Title="Courses_App">

    <FlyoutItem Title="Courses" Icon="https://tl.vhv.rs/dpng/s/325-3251170_courses-icon-black-and-white-png-download-study.png">
        <ShellContent Route="CoursePage" ContentTemplate="{DataTemplate local:CoursePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Categories" Icon="https://img.favpng.com/9/20/2/categories-icon-configuration-icon-document-icon-png-favpng-08ksTSTWmWu1hwYrd3MPLUf8L.jpg">
        <ShellContent Route="CategoryPage" ContentTemplate="{DataTemplate local:CategoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Enrollments" Icon="https://www.clipartmax.com/png/middle/312-3128002_black-and-white-library-checkmark-clipart-board-transparent-enrollment-icon.png">
        <ShellContent Route="EnrollmentPage" ContentTemplate="{DataTemplate local:EnrollmentPage}" />
    </FlyoutItem>

</Shell>
